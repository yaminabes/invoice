{% extends 'base.html.twig' %}

{% block title %}Index des Développeurs{% endblock %}

{% block body %}
    <h1>Liste des Développeurs</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Coût de Base</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.basicCost }}</td>
                <td>
                    <a type="button" class="btn btn-secondary" href="{{ path('app_developper_show', {'id': user.id}) }}">Afficher</a>
                    <a type="button" class="btn btn-primary" href="{{ path('app_developper_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-dark" href="{{ path('app_developper_new') }}">Créer un nouveau</a>
{% endblock %}
