{% extends 'base.html.twig' %}

{% block title %}Détails du Développeur{% endblock %}

{% block body %}
    <h1>Détails du Développeur</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Mot de Passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Coût de Base</th>
                <td>{{ user.basicCost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_developper_index') }}" class="btn btn-dark">Retour à la liste</a>
    <a href="{{ path('app_developper_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('developper/_delete_form.html.twig') }}
{% endblock %}
