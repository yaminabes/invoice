{% extends 'base.html.twig' %}

{% block title %}Détails de l'Option{% endblock %}

{% block body %}
    <h1>Détails de l'Option</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>Libellé</th>
                <td>{{ option.label }}</td>
            </tr>
            <tr>
                <th>Pourcentage</th>
                <td>{{ option.percentage }}%</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_option_edit', {'id': option.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_option_index') }}" class="btn btn-dark">Retour à la liste</a>
    </div>

    {{ include('option/_delete_form.html.twig') }}
{% endblock %}
